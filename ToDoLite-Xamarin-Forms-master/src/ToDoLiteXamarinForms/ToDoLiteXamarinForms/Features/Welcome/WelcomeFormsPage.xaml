<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="ToDoLiteXamarinForms.Features.Welcome.WelcomeFormsPage">

  <ContentPage.ToolbarItems>
    
    <ToolbarItem
      Text="Next"
      Order="Primary"
      Activated="OnButtonNavigateNextClicked" />
    
  </ContentPage.ToolbarItems>
  
  <StackLayout 
    Padding="20,0,20,0">
    
    <Label 
      Text="Welcome!" 
      VerticalOptions="Center" 
      FontSize="30" 
      HorizontalOptions="Center" />

    <Label
      Text="ToDo Lite - Xamarin Forms"
      VerticalOptions="Center"
      FontSize="20"
      HorizontalOptions="Start" />

    <Label
      Text="This is a sample app developed to demonstrate the basic features of Couchbase Mobile."
      VerticalOptions="Center"
      FontSize="18"
      HorizontalOptions="Start" />

    <Label
      Text="You can read more about this app and Couchbase Mobile on github:"
      VerticalOptions="Start"
      FontSize="18"
      HorizontalOptions="Center" />

    <Label 
      Text="https://github.com/couchbaselabs/ToDoLite-Xamarin-Forms" 
      VerticalOptions="Center"  
      FontSize="18" 
      HorizontalOptions="Start" />

  </StackLayout>

</ContentPage>