<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyTagPocket.Pages.UpgradePage">
  <ContentPage.Resources>
    <ResourceDictionary>
      <Style x:Key="UpgradeApp" TargetType="View">
        <Setter Property="BackgroundColor" Value="#336699"/>
      </Style>
      <Style x:Key="UpgradeTextStyle" TargetType="Label">
        <Setter Property="TextColor" Value="#A54440" />
      </Style>
    </ResourceDictionary>
  </ContentPage.Resources>
  <ContentPage.Content>
        <StackLayout>
            <Label x:Name="UpgradeTextLabel"
                   Style="{DynamicResource UpgradeTextStyle}"
              Text="Welcome to Upgrade!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>