<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyTagPocket.Pages.Settings.UpgradePage">
  <ContentPage.Content>
    <StackLayout VerticalOptions="Center">
      <ActivityIndicator IsVisible="True" IsRunning="True" Color="Blue" />
      <Label Text="Upgrade MyTagPocket"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
      <ListView x:Name="CheckList">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding NameUpgradeItem}" />
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>